<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.main.controllers.MainViewController">
   <ToggleButton fx:id="toggleToChangeButton" layoutX="673.0" layoutY="14.0" mnemonicParsing="false" onAction="#onToggleToChange" prefHeight="31.0" prefWidth="62.0" text="Change">
      <effect>
         <Glow />
      </effect>
   </ToggleButton>
   <Canvas fx:id="canvas" height="600.0" layoutX="6.0" onMouseClicked="#onCanvasClicked" onMouseMoved="#onMouseHoverHighlightObject" width="660.0" />
   <Button fx:id="squareButton" layoutX="704.0" layoutY="67.0" mnemonicParsing="false" onAction="#onSquareButtonPress" prefHeight="31.0" prefWidth="60.0" text="Square" />
   <Button fx:id="circleButton" layoutX="704.0" layoutY="110.0" mnemonicParsing="false" onAction="#onCircleButtonPress" prefHeight="31.0" prefWidth="60.0" text="Circle" />
   <Button fx:id="lineButton" layoutX="704.0" layoutY="154.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="60.0" text="Line" />
   <Separator layoutX="666.0" layoutY="195.0" prefHeight="5.0" prefWidth="121.0" />
   <Separator layoutX="668.0" layoutY="8.0" orientation="VERTICAL" prefHeight="281.0" prefWidth="5.0" />
   <Separator layoutX="669.0" layoutY="286.0" prefHeight="5.0" prefWidth="121.0" />
   <Button fx:id="ColorButton" layoutX="704.0" layoutY="202.0" mnemonicParsing="false" onAction="#onColorButtonPressed" prefHeight="31.0" prefWidth="60.0" text="Color" />
   <Button fx:id="SizeButton" layoutX="704.0" layoutY="245.0" mnemonicParsing="false" onAction="#onSizeButtonPressed" prefHeight="31.0" prefWidth="60.0" text="Size" />
   <Separator layoutX="669.0" layoutY="53.0" prefHeight="5.0" prefWidth="121.0" />
   <ToggleButton fx:id="toggleToDrawButton" layoutX="734.0" layoutY="14.0" mnemonicParsing="false" onAction="#onToggleToDraw" prefHeight="31.0" prefWidth="60.0" text="Draw" />
   <TextField fx:id="changeColorTextField" layoutX="675.0" layoutY="300.0" onAction="#onColorButtonPressed" prefHeight="26.0" prefWidth="115.0" promptText="Enter new color!" />
   <TextField fx:id="changeSizeTextField" layoutX="677.0" layoutY="326.0" onAction="#onSizeButtonPressed" prefHeight="26.0" prefWidth="115.0" promptText="Enter new size!" />
</AnchorPane>
